<h2><%= @domain.name %></h2>
<h3>Domain Aliases</h3>
<ul>
<% @domain.aliases.each do |a| %>
	<li><%= a %></li>
<% end %>
</ul>
<h3>Mailboxes</h3>
<table class="table table-hover">
<thead>
	<tr>
		<td></td>
		<td></td>
	</tr>
</thead>
<tbody>
<% @domain.mailboxes.each do |m| %>
		<tr>
			<td><a href="/domains/<%= @domain.name %>/mailboxes/<%= m.local_part %>"><%= m.local_part %></a></td>
			<td><a href="/domains/<%= @domain.name %>/mailboxes/<%= m.local_part %>/reset_password">Reset password</a></td>
		</tr>
<% end %>
</tbody>
</table>
<a href="/domains/<%= @domain.name %>/mailboxes/create">Create mailbox</a>
<br/>
<h3>E-Mail Aliases</h3>
<table class="table table-hover">
<thead>
	<tr>
		<td><strong>alias</strong>@<%= @domain.name %></td>
		<td>Delivers to</td>
	</tr>
</thead>
<tbody>
	<% @domain.mailbox_aliases.each do |k,v| %>
		<tr>
			<td><%= k %></td>
			<td><%= v.join(", ") %></td>
		</tr>
	<% end %>
</tbody>
</table>
<% if @domain.is_bytemark_content_dns? %>
	<form action="/domains/<%= @domain.name %>" method="POST">
	<p>Use Bytemark anti-spam servers? <input type="checkbox" name="antispam" <%= "checked" if @domain.uses_bytemark_antispam? %> value="1"/></p>
	<input type="submit" name="submit" value="Update">
	</form>
<% end %>
